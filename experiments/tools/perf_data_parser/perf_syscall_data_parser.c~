#include <stdio.h>
#include <string.h>

#define MAX_SIZE_OF_LINE 512

int main(int argc, char* argv[])
{
    char const* const fileName = argv[1]; 
    FILE* file = fopen(fileName, "r"); 
    char line[MAX_SIZE_OF_LINE];
    int input_line_num = 0;

    while (fgets(line, sizeof(line), file)) {
        int element_num = 0;
        char *line_parsed;

        input_line_num++;
        input_line_num %= 2;
        printf("%d \n", input_line_num);
        line_parsed = strtok(line, ":");
        element_num++;
        while (line_parsed != NULL) {
            if (element_num == 1) {
                printf("%d, %s \n", element_num, line_parsed);
            }
            if (element_num == 3) {
                printf("%d, %s \n", element_num, line_parsed);
            }
            line_parsed = strtok(NULL, ":");
            element_num++;
        }
    }

    fclose(file);

    return 0;
}
